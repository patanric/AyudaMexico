<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:id="@+id/card_view_google_url"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/card_view_layout_padding"
        >

        <TextView
            android:id="@+id/donations_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Dona con Google"
            android:textColor="@color/orange"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/donations_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="Google proporciona este servicio de donaciÃ³n para ayudarle a dirigir sus fondos para un impacto local efectivo"
            android:textColor="@android:color/secondary_text_light"
            android:textIsSelectable="true"
            android:textSize="16sp"
            />

        <Button
            android:id="@+id/donations_url"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="@string/quiero_ayudar"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>